@model List<JourneyDto>
<style>
    .outer-card {
        width: 70%;
        background-color: #F3F3F3;
    }

    .card-header {
        background-color: #2F4EB4;
    }

    .inner-card {
        width: 100%;
        background-color: #F3F3F3;
    }
</style>

<div class="d-flex justify-content-center mt-2">
    <div class=col-3 d-flex justify-content-start">

        <a href="/"><img id="back-img" width="30px" height="30px" src="/back.svg" style="cursor: pointer;"></img></a>
    </div>
    <div class="col-7">
        @if (Model.Count > 0)
        {
            <div class="card text-white  mb-3 outer-card">
                <div class="card-header card-header">@ViewBag.journeyInfo</div>
                <div class="card-body justify-content-center">

                    @foreach (var item in Model)
                    {
                        <div class="card text-white mb-3 inner-card">
                            <div class="row">
                                <div class="col-7">
                                    <div class="card-body">
                                        <h5 class="card-title" style="color:blue">@item.DepartureTime -> @item.ArrivalTime </h5>
                                        <p class="card-text" style="color:black">@item.Origin-@item.Destination</p>

                                    </div>
                                </div>
                                <div class="col-4 d-flex  mt-2" >
                                    <div class="card bg-danger mb-3" style="max-height:50px;">
                                        <div class="card-body" style="padding-top: 1em;">
                                            <p class="card-text" style="color:white">@String.Format("{0:0.00}",item.Price) @(item.Currency == "TRY" ? "TL" : item.Currency)</p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="row"> No journey has been found for selected options. </div>
        }
    </div>
